<% if @companies.empty? %>
  <h3>Nenhuma Empresa cadastrada</h3>
<% end %>
<p id="notice"><%= notice %></p>
 

 
<table>
 <thead>
   <tr>
     <th><%= @companies.human_attribute_name("name") %></th>
     <th><%= @companies.human_attribute_name("corporate_name") %></th>
     <th><%= @companies.human_attribute_name("cnpj") %></th>
     <th><%= @companies.human_attribute_name("address") %></th>
     <th><%= @companies.human_attribute_name("domain") %></th>
     <th><%= @companies.human_attribute_name("social_networks") %></th>
     <th colspan="3"></th>
   </tr>
 </thead>
 
 <tbody>
   <% @companies.each do |company| %>
     <tr>
       <td><%= link_to company.name, company %></td>
       <td><%= company.corporate_name %></td>
       <td><%= company.cnpj %></td>
       <td><%= company.address %></td>
       <td><%= company.domain %></td>
       <td><%= company.social_networks %></td>
     </tr>
   <% end %>
 </tbody>
</table>
 
<br>
 
<%= link_to "#{translate 'actions.new'}", new_company_path %>
<%= link_to "#{translate 'actions.back'}", root_path %>